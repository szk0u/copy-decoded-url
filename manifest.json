{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.5",
  "homepage_url": "https://github.com/szk0u/copy-decoded-url",
  "default_locale": "ja",

  "background": {
    "scripts": [
      "lib/browser-polyfill.min.js",
      "src/background.js"
    ]
  },

  "page_action": {
    "browser_style": false,
    "default_title": "__MSG_pageActionTitle__",
    "default_icon": {
      "16": "icon/clipboard-16.png",
      "32": "icon/clipboard-32.png"
    },
    "show_matches": ["https://*/*", "http://*/*"]
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "tabs"
  ]

}
